# Copy this file to .env (local) and fill in the values.
# For Vercel: set the same variables in Project → Settings → Environment Variables.

# ─── Database (required for account & admin) ─────────────────
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# ─── NextAuth (required for sign-in) ──────────────────────────
NEXTAUTH_SECRET="your-secret-at-least-32-chars-long"
NEXTAUTH_URL="http://localhost:3000"

# ─── Account emails (verification & password reset) ───────────
# Get a key at https://resend.com (free tier available)
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Optional: used in verification/reset links (defaults to https://www.sim2me.net)
# NEXT_PUBLIC_SITE_URL="https://www.sim2me.net"
